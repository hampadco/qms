@* card for show parnd cat  *@
<style>
 .card:hover {
      background-color: #ceddfa  !important;
     
    }

</style>

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="col-xxl row">
    @if(@ViewBag.Categories != null){
        foreach(var item in ViewBag.Categories){
            <div class="card col-xl-3 col-lg-3 col-md-3 col-sm-6 col-12 m-2" >
                <div class="card-body text-center">
                    <h5 class="card-title alert alert-primary text-center">@item.CatName</h5>
               
                    <h6 class="card-subtitle mb-2 text-muted">دسته اصلی</h6>
                    <div style="color: red;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bell" viewBox="0 0 16 16">
                            <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2M8 1.918l-.797.161A4 4 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4 4 0 0 0-3.203-3.92zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5 5 0 0 1 13 6c0 .88.32 4.2 1.22 6"/>
                        </svg>
                        <span style="background-color: red; color: white; border-radius: 50%; display: inline-block; width: 20px; height: 20px; text-align: center; line-height: 20px; font-size: 12px;">4</span>
                    </div>
                    <a href="#" class="card-link mt-2">کد : @item.CatCode</a> <br><br>
                        @if(item.ParentId==0){
                            <a href="/Admin/home/Categories/@ViewBag.Id?parentId=@item.Id" class="card-link btn btn-outline-dark form-control">دسته های زیرین</a>
                            <br>
                        }
                            <a href="/Admin/home/AddCategories/@ViewBag.Id?parentId=@item.ParentId&CatId=@item.Id" class="card-link btn btn-outline-dark form-control">انتخاب دسته</a>

                    </div>
            </div>
            <br>
        }
    }

    
    
    </div>
</div>